@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using eBuisness.ViewModels
@model RegisterVM
<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Majestic Admin</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="../../vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../../vendors/base/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="~/admin/assets/css/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="~/admin/assets/imagesfavicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="~/admin/assets/images/logo.svg" alt="logo">
              </div>
              <h4>New here?</h4>
              <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
              <form class="pt-3" method="post">
                 <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                     Fullname
                  <input  class="form-control form-control-lg"  placeholder="Fullname" asp-for="Fullname"  >
                  <span asp-validation-for="Fullname"></span>
                </div>
                 <div class="form-group">Username
                  <input  class="form-control form-control-lg"  placeholder="Username" asp-for="Username"  > 
                  <span asp-validation-for="Username"></span>
                </div>
                 <div class="form-group">Email
                  <input  class="form-control form-control-lg"  placeholder="Email" asp-for="Email"  > 
                  <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">Password
                  <input  class="form-control form-control-lg"  placeholder="Password" asp-for="Password"  > 
                  <span asp-validation-for="Password"></span>
                </div>
                 <div class="form-group">ConfirmPassword
                  <input  class="form-control form-control-lg"  placeholder="Username" asp-for="ConfirmPassword"  > 
                  <span asp-validation-for="ConfirmPassword"></span>
                </div>
               
               
                <div class="mt-3">
                <button class="btn btn-primary" type="submit" >Sign In</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Already have an account? <a asp-action="Login" class="text-primary">Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="../../vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="~/admin/assets/js/off-canvas.js"></script>
  <script src="~/admin/assets/js/hoverable-collapse.js"></script>
  <script src="~/admin/assets/js/template.js"></script>
  <!-- endinject -->
</body>

</html>
