@using eBuisness.Areas.Admin.ViewModels.Team
@model CreateTeamVM
@{
    ViewData["Title"] = "Create";
}

  <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Create Team</h4>
                  
                  <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                      <label for="exampleInputUsername1">Image</label>
                      <input class="form-control"  placeholder="Username" asp-for="Image">
                      <span asp-validation-for="Image"></span>
                    </div>
                     <div class="form-group">
                      <label for="exampleInputUsername1">Name</label>
                      <input class="form-control"  placeholder="Username" asp-for="Name">
                      <span asp-validation-for="Name"></span>
                    </div>
                     <div class="form-group">
                      <label for="exampleInputUsername1">Position</label>
                      <input class="form-control"  placeholder="Username" asp-for="Position">
                      <span asp-validation-for="Position"></span>
                    </div>
                    
                    <div class="form-check form-check-flat form-check-primary">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input">
                        Remember me
                      </label>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                  </form>
                </div>
              </div>
            </div>
          </div>

